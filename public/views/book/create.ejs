<html>
    <head>
        <title>New Book</title>
        <link href="/css/style.css" rel="stylesheet" type"text/css">
        <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <meta name="description" content="Affordable All Category Book Reading">
	  <meta name="keywords" content="Read Online, Save and Download, Unlimited Books">
  	<meta name="author" content="Brad Traversy">
    <link rel="stylesheet" href="./css/style.css">
    </head>
    <body>
        <header>
      <div class="container">
        <div id="branding">
          <h1><span class="highlight">EgReader.com</span> Read Online Nonstop</h1>
        </div>
        <nav>
          <ul>
            <li><a href="/books/all">All Books</a></li>
            <li class="current"><a href="/books/new">Create Book</a></li>
               </ul>
        </nav>
      </div>
    </header>
        <center>
        <h1>Create New Book</h1>
        <div>Name:
        <input type="text" id="name"/>
        </div>
        <br>
        <div>Author Name:
        <input type="text" id="auth_name"/>
        </div>
        <br>
        <div>Image:
            <textarea id="img"></textarea>
            
        </div>
        <br>
        <div>PDF Link:
            <textarea id="pdf"></textarea>
            
        </div>
        <br>
        <div>Description:
            <textarea id="description"></textarea>
            
        </div>
        <br>
        <!-- <div>Price:
            <textarea id="price"></textarea>
            <label style="color:red" id="error" type="text"></label>
            
        </div>
        <br>
         <div>Quantity:
            <textarea id="quantity"></textarea>
            
        </div>
        <br> -->
        <button id="submit">SUBMIT</button>
        
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script>
            var book={name:"", img:"", auth_name:"", description:"" };
            $("#name").change(function(){
                book.name=$("#name").val();
            });
            $("#img").change(function(){
                book.img=$("#img").val();
            });
            $("#pdf").change(function(){
                book.pdf=$("#pdf").val();
            });
            $("#auth_name").change(function(){
                book.auth_name=$("#auth_name").val();
            });
             $("#description").change(function(){
                book.description=$("#description").val();
            });
           /*  $("#price").change(function(){
              book.price=$("#price").val();
            });
             $("#quantity").change(function(e){
                book.quantity=$("#quantity").val();
                console.log(e);
            }); */
          
             $("#submit").click(function(){
                 console.log(book);
              $.ajax({
                  method:"POST",
                  url:"/api/books",
                  data:book
              }).done(function(response){
                  console.log(response);
                  window.location.replace("/books/"+response._id);
              }).fail(function(response){
                   $("#error").text(JSON.parse(response.responseText).message);
                   console.log(JSON.parse(response.responseText).message);
              });
            });
        </script>
        </center><br> <br> <br> <br> <br>
        <footer>
      <p>EgReader.com, Copyright &copy; 2017</p>
    </footer>
    </body>
</html>
